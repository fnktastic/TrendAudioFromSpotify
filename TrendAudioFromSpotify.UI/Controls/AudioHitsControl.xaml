<UserControl x:Class="TrendAudioFromSpotify.UI.Controls.AudioHitsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrendAudioFromSpotify.UI.Controls"
             xmlns:views="clr-namespace:TrendAudioFromSpotify.UI.Views"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="1"
            CornerRadius="5"
            Padding="10 5" 
            Background="Black"
            Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type views:MonitoringUserControl}}}">
        <Grid Background="Black" x:Name="audioControl">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="0.5*"></ColumnDefinition>
                <ColumnDefinition Width="0.5*" MaxWidth="500"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding No, Mode=OneTime}" VerticalAlignment="Center" />
            <Image Grid.Row="0" Width="40" Grid.Column="1" Source="{Binding Cover}" HorizontalAlignment="Center">
                <Image.ToolTip>
                    <Image Width="400" Source="{Binding Cover}" />
                </Image.ToolTip>
            </Image>
            <StackPanel MaxWidth="200" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBlock TextAlignment="Left" TextTrimming="CharacterEllipsis" FontWeight="DemiBold" FontSize="10" Text="{Binding Title}" />
                <TextBlock TextAlignment="Left" TextTrimming="CharacterEllipsis" FontWeight="Light" FontSize="12" Text="{Binding Artist}" />
            </StackPanel>

            <ScrollViewer Grid.Row="0" Grid.Column="3" Margin="10 0" MaxHeight="40" HorizontalAlignment="Right"
                          HorizontalScrollBarVisibility="Auto">
            <ListBox ItemsSource="{Binding Playlists}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0" Height="35" BorderThickness="1" BorderBrush="Black" 
                                Padding="12 0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                            <TextBlock FontSize="10" FontWeight="Thin" VerticalAlignment="Center" Text="{Binding Name}" />
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" MaxWidth="475" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
            </ScrollViewer>

            <TextBlock Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" 
                       HorizontalAlignment="Center" Text="{Binding Hits}" />

            <CheckBox Grid.Row="0" Grid.Column="4"
                      Visibility="Collapsed"
                      HorizontalAlignment="Right"
                      IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            
            <Button Grid.Row="0" Grid.Column="5"
                Width="40" Height="40"
                HorizontalAlignment="Right"
                Command="{Binding Path=DataContext.PlaySongCommand, RelativeSource={RelativeSource AncestorType={x:Type views:MonitoringUserControl}}}"
                CommandParameter="{Binding}"
                Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}">
                <icons:PackIconBoxIcons Kind="RegularPlayCircle" />
            </Button>
            
        </Grid>
    </Border>
</UserControl>
